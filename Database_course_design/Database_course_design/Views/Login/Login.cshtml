
@{
    ViewBag.Title = "login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Animated Form</title>
    <link rel="stylesheet" href="~/Content/register.css">
</head>

<body>

    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>AnimaForm</title>
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <main>
            <section class="buttons login-button-active">
                <button class="login-button">
                    <a href="#" class="log-link login-button-active">登陆</a>
                    <div class="login-underline login-button-active"></div>
                </button>
                <button class="signup-button">
                    <a href="#" class="sign-link">注册</a>
                    <div class="signup-underline login-button-active"></div>
                </button>
            </section>
            <section class="forms">
                <!--登陆表单-->
                <form class="login-form login-button-active">
                    <fieldset>
                        <label for="login-email">账号</label>
                        <input id="login-email" type="email" name="email" required>
                        <label for="login-password">密码</label>
                        <input id="login-password" type="password" name="password" required>
                    </fieldset>
                    <input type="submit" name="login" value="登录">
                </form>
                <!--注册表单-->
                <form class="signup-form">
                    <fieldset>
                        <label for="signup-email">账号</label>
                        <input id="signup-email" type="email" name="email" required style="height: 30px">
                        <label for="signup-password">密码</label>
                        <input id="signup-password" type="password" name="password" required style="height: 30px">
                        <label for="signup-confirm-password">再次确认密码</label>
                        <input id="signup-confirm-password" type="password" name="password" required style="height: 30px">
                        <label for="signup-school">选择学校</label>
                        <input id="signup-school" type="school" name="school" required style="height: 35px">
                    </fieldset>
                    <input type="submit" name="continue" value="完成">
                </form>
            </section>
        </main>
    </body>
</html>

<script src="~/Scripts/register.js"></script>
</body>
</html>

